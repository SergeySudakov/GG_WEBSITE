#sign_up input, #sign_up a {display: inline;}

#sign_up input {width: 70%;}

body
{
	background: #0543ff; /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(#0543ff, #031aa9); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(#0543ff, #031aa9); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(#0543ff, #031aa9); /* For Firefox 3.6 to 15 */
  background: linear-gradient(#0543ff, #031aa9); /* Standard syntax */
  
  color: white;
}

#sign_up_button
{
	background: #fb8300; /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(#fb8300, #d34f00); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(#fb8300, #d34f00); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(#fb8300, #d34f00); /* For Firefox 3.6 to 15 */
  background: linear-gradient(#fb8300, #d34f00); /* Standard syntax */
  
  border-radius: 2px;
  
  -webkit-box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.75);
	-moz-box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.75);
	box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.75);
	
	padding: 15px 20px 15px 20px;
	height: 50px;

	
	font-weight: bold;
	font-size: 16px;
}

#sign_up_button:hover
{
	background: #d34f00; /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(#d34f00, #d34f00); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(#d34f00, #d34f00); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(#d34f00, #d34f00); /* For Firefox 3.6 to 15 */
  background: linear-gradient(#d34f00, #d34f00); /* Standard syntax */
}

#sign_up_input
{
	height: 50px;
	border-radius: 2px;
	padding: 15px 20px 15px 20px;
	font-weight: bold;
	font-size: 16px;
}

.phone_image {text-align: center;}

@media screen and (min-width: 1025px) {
    #phone_image1 {margin-top: -160px;}
    #phone_image2 {margin-top: -100px;}
}